CC = gcc -Wall -Werror -Wextra -pedantic
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(SRC) -o $(NAME)

clean:
	rm -f *~ $(NAME)

oclean:
	rm -f $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: clean fclean oclean re
